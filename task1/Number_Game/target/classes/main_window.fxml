<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox fx:id="main_window" alignment="CENTER" prefHeight="350.0" prefWidth="320.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.task1.number_game.gui.InterfaceController">
   <AnchorPane prefHeight="350.0" prefWidth="320.0">
      <children>
         <Label fx:id="curent_round" layoutX="121.0" layoutY="53.0" text="Round 1">
            <font>
               <Font name="System Bold" size="18.0" />
            </font>
         </Label>
         <Text fx:id="number_to_guess" layoutX="53.0" layoutY="108.0" strokeType="OUTSIDE" strokeWidth="0.0" text="I am thinking of a number between 1 - 10" textAlignment="CENTER" wrappingWidth="214.0">
            <font>
               <Font name="System Bold" size="14.0" />
            </font>
         </Text>
         <Label fx:id="response" alignment="CENTER" contentDisplay="CENTER" layoutX="45.0" layoutY="143.0" prefHeight="21.0" prefWidth="238.0" wrapText="true">
            <font>
               <Font name="System Bold" size="18.0" />
            </font>
         </Label>
         <TextField fx:id="text_field" alignment="CENTER" layoutX="77.0" layoutY="208.0" onAction="#guess" prefHeight="21.0" prefWidth="171.0" promptText="Enter Guess" />
         <Label fx:id="attempts_left" alignment="CENTER" contentDisplay="CENTER" layoutX="79.0" layoutY="274.0" text="Attempts Left: 9">
            <font>
               <Font name="System Bold" size="18.0" />
            </font>
         </Label>
         <Button fx:id="submit_button" alignment="CENTER" layoutY="307.0" mnemonicParsing="false" onAction="#guess" prefHeight="44.0" prefWidth="324.0" text="Submit" />
      </children>
   </AnchorPane>
</VBox>
